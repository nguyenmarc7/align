<h1>Listing Products</h1>
<%= link_to 'New product', new_product_path, class: "btn btn-primary" %>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card">
<%= image_tag product.picture if product.picture.attached? %>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description %></p>
              
              <%= link_to 'Show', product_path(product), class: "btn btn-primary" %>

              <% if current_user && @user_id == product.user_id %>

                <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary" %>
                <%= link_to 'Destroy', product_path(product),
                          method: :delete,
                          data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
              <% end %>
            </div>
        </div>
      </div>
    <% end %>
  </div>

